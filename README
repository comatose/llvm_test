.ll := LLVM assembly
.bc := LLVM bitcode
.s := native assembly

# LLVM IR generation
clang++ -emit-llvm -S main.cpp -o main.ll
clang++ -emit-llvm -S add.cpp -o add.ll

# LLVM bitcode generation
llvm-as add.ll -o add.bc
llvm-as main.ll -o main.bc

# Executable generation
llvm-link add.bc main.bc -o one

# Executable Optimization
opt -std-compile-opts -std-link-opts one -o one.opt


# gcc staging
g++ -S main.cpp -o main.s
as main.s -o main.o

g++ -S add.cpp -o add.s
as add.s -o add.o

g++ main.o add.o -o one
